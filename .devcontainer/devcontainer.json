{
  "name": "Level Analyst Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "18" }
  },
  "postCreateCommand": "pip install -U pip && pip install -r requirements.txt || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg"
      ]
    }
  },
  "remoteEnv": {
    "API_PORT": "8080"
  },
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": { "label": "Level Analyst API" }
  }
}